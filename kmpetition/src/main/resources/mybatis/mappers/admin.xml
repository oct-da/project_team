<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="mapper.admin">

	<resultMap type="memberVO" id="memResult">
		<result property="id" column="id" />
		<result property="pwd" column="pwd" />
		<result property="name" column="name" />
		<result property="phone" column="phone" />
		<result property="email" column="email" />
		<result property="lastlogin" column="lastlogin" />
	</resultMap>
	
	<resultMap type="noticeVO" id="noticeResult">
		<result property="articleNO" column="articleNO" />
		<result property="title" column="title" />
		<result property="content" column="content" />
		<result property="createdate" column="createdate" />
	</resultMap>
	
	
	
	<!-- 페이징 적용한 sql -->
	<select id="selectAllMember" parameterType="Integer" resultMap="memResult">
		<![CDATA[ 
			select * from member 
			order by lastlogin desc 
			limit #{startNum}, 10 
		]]>
	</select>
	
	<select id="selectTotMember" resultType="Integer">
		<![CDATA[ 
			select count(*) from member 
		]]>
	</select>
	
	<insert id="insertNotice" parameterType="noticeVO">
		<![CDATA[ 
			insert into notice(title, content, createdate) 
			values(#{title}, #{content}, curdate()) 
		]]>
	</insert>
		
		
		
		
<!-- 이하는 상윤씨가 작업한 답글기능 목적의 SQL문 -->
		<insert id="insertReply" parameterType="replyVO">
			insert into reply
			values(#{articleNO}, #{title}, #{content})
		</insert>

		<insert id="insertREplyUpload" parameterType="List">
			insert into replyupload
			values
			<foreach item="item" collection="list" separator=" , ">
				(#{articleNO}, #{uploadfile})
			</foreach>
		</insert>	
		
		<update id="updateDisable" parameterType="int">
			update board
			set reply=true
			where ARTICLENO=#{articleNO}
		</update>	
		
		<select id="selectReplyUploadList" parameterType="int" resultType="String">
			select UPLOADFILE
			from REPLYUPLOAD
			where ARTICLENO=#{articleNO}
		</select>
		
		<update id="updateReply" parameterType="replyVO">
			update Reply
			set TITLE=#{title}, CONTENT=#{content}
			where ARTICLENO=#{articleNO}
		</update>
		
		<delete id="deleteReplyUpload" parameterType="list">
			delete from REPLYUPLOAD
			where UPLOADFILE in ()
			<foreach item="item" collection="list" separator=" , ">
			#{item.uploadfile}
			</foreach>
			)
			
		</delete>
		
		<delete id="deleteReply" parameterType="int">
			delete from REPLY
			where ARTICLENO=#{articleNO}
		</delete>
	
</mapper>